<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jiin.admin.mapper.data.ProxySeedCronMapper">
    <select id="findById" resultType="ProxySeedCronDTO">
        SELECT * FROM _PROXY_SEED_CRON WHERE ID = #{id}
    </select>

    <select id="findByCacheId" resultType="ProxySeedCronDTO">
        SELECT * FROM _PROXY_SEED_CRON WHERE CACHE_ID = #{cacheId}
    </select>

    <insert id="insert">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            SELECT NEXTVAL('PROXY_SEED_CRON_SEQ')
        </selectKey>
        INSERT INTO _PROXY_SEED_CRON (
            ID,
            CACHE_ID,
            SECOND,
            MINUTE,
            HOUR,
            DAY,
            WEEK,
            MONTH
        ) VALUES (
            #{id},
            #{cacheId},
            #{second},
            #{minute},
            #{hour},
            #{day},
            #{week},
            #{month}
        )
    </insert>

    <update id="update">
        UPDATE _PROXY_SEED_CRON SET
            SECOND = #{second},
            MINUTE = #{minute},
            HOUR = #{hour},
            DAY = #{day},
            WEEK = #{week},
            MONTH = #{month}
        WHERE CACHE_ID = #{cacheId}
    </update>

    <delete id="deleteById">
        DELETE FROM _PROXY_SEED_CRON WHERE ID = #{id}
    </delete>

    <delete id="deleteByCacheId">
        DELETE FROM _PROXY_SEED_CRON WHERE CACHE_ID = #{cacheId}
    </delete>
</mapper>
